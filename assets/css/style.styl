@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,700');

// $color-blue = #163046
// $color-grey = #7b8491
// $color-dark = #1c2630

body
    font-family 'Roboto'
    padding 0
    margin 0
    font-size 16px
    color #313333
    overflow-x hidden

h1, h2, h3, p, a, input, figure, figcaption, select, button
    -webkit-appearance none
    margin 0
    display block
    outline 0
    color white
    font-family 'Roboto'
    font-weight 100

button, a
    cursor pointer
    &:focus
        outline 0

img
    width 100%
.wide-content
    max-width 1280px
    width 90%
    margin 0 auto
    position relative

header
    height 100vh
    position relative
    @media(max-width:860px)
        height 680px
    .wide-content
        height 100%
    .back
        height 100%
        width 100%
        position absolute
        z-index -1
        left 0
        top 0
        object-fit cover
    .topBar
        position absolute
        top 20px
        left 50%
        transform translateX(-50%)
        display flex
        align-items center
        width 100%
        justify-content space-between
        @media(max-width:860px)
            flex-direction column
            top auto
            left auto
            transform none
            padding-top 20px
            position relative
        p
            color #707070
            font-size 14px
            span
                @media(max-width:860px)
                    display none
            a
                border-radius 25px
                -moz-border-radius 25px
                -webkit-border-radius 25px
                display inline-block
                padding 6px 15px
                margin-left 15px
                color #707070
                background none
                border 1px solid #707070
                text-decoration none
                @media(max-width:860px)
                    margin 20px auto
                    display block
    .textMod
        top 30%
        left 50%
        transform translate(-50%,-50%)
        z-index 99
        position absolute
        text-align center
        width 100%
        @media(max-width:860px)
            position relative
            transform none
            left auto
            top auto
        h2, p, button
            display block
            font-weight 600
            line-height normal
        h2
            color #2FAAF6
            font-size 72px
            line-height 72px
            @media(max-width:860px)
                font-size 36px
                line-height 39px
        p
            margin 15px auto
            color #0E2533
            font-size 24px
            @media(max-width:860px)
                font-size 20px
            @media(max-width:640px)
                font-size 18px
        a
            display inline-block
            padding 8px 30px
            background #EA425E
            border-radius 25px
            -moz-border-radius 25px
            -webkit-border-radius 25px
            color white
            border none

.video
    background #0E2533
    padding 60px 0
    margin-top -1px
    h3
        color #F3B842
    .videoWrapper
        position relative
        padding-bottom 56.25% /* 16:9 */
        padding-top 25px
        height 0
        iframe
            position absolute
            top 0
            left 0
            width 100%
            height 100%

.slider
    background #E1E1E1
    padding 60px 0 0
    position relative
    height calc(768px - 60px)
    @media(max-width:640px)
        padding 0
        height 540px
    h3
        color #2FAAF6
        position absolute
        z-index 99
        width 100%
        top 30px  
    .slide
        height 100%
        .carousel-indicators
            li
                height 30px
                width 30px
                border-radius 50%
                -moz-border-radius 50%
                -webkit-border-radius 50%
                background none
                border 1px solid #0E2533
                cursor pointer
                @media(max-width:860px)
                    height 16px
                    width 16px
                    bottom 0
                    border-color white
                &.active
                    background #0E2533
                    @media(max-width:860px)
                        background white
        .carousel-inner
            height 100%
            .carousel-item
                justify-content space-between
                align-items center
                background #e1e1e1
                height 100%
                img, .text
                    width 50%
                    display inline-block
                    vertical-align middle
                    height 100%
                    object-fit contain
                    @media(max-width:860px)
                        width 100%
                        object-fit cover
                .text
                    width 45%
                    text-align center
                    font-size 32px
                    line-height 34px
                    position absolute
                    top 50%
                    z-index 99
                    transform translateY(-50%)
                    height auto
                    @media(max-width:860px)
                        width 90%
                        top auto
                        height auto
                        bottom 60px
                        transform translateX(-50%)
                        left 50%
                        background white
                        padding 8px 12px
                        border-radius 25px
                        -moz-border-radius 25px
                        -webkit-border-radius 25px
                        font-size 16px
                        line-height 19px
                    span
                        display block
                        margin 0 auto 15px
                        border-radius 50%
                        -moz-border-radius 50%
                        -webkit-border-radius 50%
                        background #2FAAF6
                        color #E1E1E1
                        font-size 48px
                        height 80px
                        width 80px
                        line-height 82px
                        text-align center
                        font-weight 600
                        @media(max-width:860px)
                            display none         
        .carousel-control-prev, .carousel-control-next
            display none

.services
    background #0E2533
    padding 60px 10%
    h3
        color white
    .modles
        display flex
        margin 80px auto
        align-items flex-start
        justify-content space-between
        flex-wrap wrap
        @media(max-width:860px)
            margin 0
        .mod
            width 14%
            text-align center
            margin-bottom 30px
            @media(max-width:1280px)
                width 18%
            @media(max-width:860px)
                width 50%
            @media(max-width:640px)
                width 100%
            img, span
                display block
            img
                width 120px
                margin 0 auto
            span
                color white
                font-size 26px
                line-height 32px
                margin-top 10px
                @media(max-width:1420px)
                    font-size 20px
                    line-height 22px
                @media(max-width:768px)
                    font-size 16px
                    line-height 19px

.slide2
    height 520px
    @media(max-width:640px)
        height 220px
    .slide
        height 100%
        .carousel-inner
            height 100%
            .carousel-item
                height 100%
                img
                    object-fit cover
                    height 100%
        .text
            position absolute
            top 50%
            left 50%
            transform translate(-50%,-50%)
            z-index 999
            color white
            text-transform uppercase
            font-size 40px
            line-height 44px
            font-weight 600
            width 80%
            text-align center
            @media(max-width:640px)
                font-size 22px
                line-height 25px
                width 90%

.testimonios
    padding 60px 2%
    background url(../images/Fondo-6@2x.jpg) repeat center center
    @media(max-width:640px)
        background url(../images/Fondo-6@2x.jpg) repeat center center /150%
    h3
        color #0E2533
    .modTest
        display flex
        flex-wrap wrap
        justify-content space-around
        @media(max-width:860px)
            justify-content center
            flex-direction column
        img
            max-width 526px
            object-fit contain
            width 30%
            @media(max-width:860px)
                width 100%
                height 314px
                margin-bottom 60px
                &:last-of-type
                    margin-bottom 0

.companies
    padding 60px 2%
    h3
        color #0E2533
    .modTest
        display flex
        flex-wrap wrap
        justify-content space-around
        align-items center
        @media(max-width:860px)
            flex-direction column
        img
            object-fit contain
            width 20%
            max-width 300px
            margin-right 5%
            &:last-of-type
                margin 0
            @media(max-width:860px)
                width 50%
                margin 0

footer
    padding 25px 40px
    background #F3B842
    h3, p
        color white
        text-align left
        @media(max-width:640px)
            text-align center !important
    h3
        color white
        margin-bottom 10px
    p
        display block
        font-weight 300
        width 100%
        &.redes
            display flex
            align-items center
            margin-top 20px
            @media(max-width:640px)
                justify-content center
                margin 20px auto 30px
            a
                width 28px
                margin-right 10px
                &:last-of-type
                    margin-right 0
                img
                    width 100%
        &.logo
            text-align right
            @media(max-width:640px)
             text-align center
             margin-bottom 30px
            img
                width 120px
                display inline-block
    .bottom
        display flex
        align-items center
        width 100%
        justify-content space-between
        @media(max-width:640px)
            flex-direction column
        .urls
            display flex
            width 50%
            @media(max-width:640px)
                width 100%
                text-align center
                justify-content center
                margin-bottom 15px
            a
                &:first-of-type
                    margin-right 10px
                    padding-right 10px
                    border-right 1px solid white
                &:hover
                    color white
                    text-decoration underline
        p
            text-align right
            @media(max-width:640px)
                width 100%
                text-align center
            span
                display block
                font-weight 100
        
h3
    text-align center
    margin 0 auto 30px
    font-weight 600
    color #F3B842
    font-size 54px
    @media(max-width:860px)
        font-size 36px
        line-height 40px
    @media(max-width:860px)
        font-size 28px
        line-height 32px

